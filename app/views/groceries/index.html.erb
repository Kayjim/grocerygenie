<h1>Groceries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Category</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groceries.each do |grocery| %>
      <tr>
        <td><%= grocery.product %></td>
        <td><%= grocery.category %></td>
        <td><%= grocery.quantity %></td>
        <td><%= link_to 'Show', grocery %></td>
        <td><%= link_to 'Edit', edit_grocery_path(grocery) %></td>
        <td><%= link_to 'Destroy', grocery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grocery', new_grocery_path, remote: true %>
<div id="grocery-form" style="display: none;"></div>

</div>


<ul>
    <div id="groceries">
        <%= render @groceries %>
    </div>
</ul>
